    <script>
        let uploadedImage = null;
        let currentProvider = localStorage.getItem('llm_provider') || 'anthropic';
        let apiKey = localStorage.getItem(`${currentProvider}_api_key`);
        let customEndpoint = localStorage.getItem('custom_endpoint') || '';

        const providerConfig = {
            anthropic: {
                name: 'Anthropic Claude',
                infoText: 'Get your API key from <a href="https://console.anthropic.com/" target="_blank">console.anthropic.com</a>',
                endpoint: 'https://api.anthropic.com/v1/messages',
                supportsVision: true
            },
            openai: {
                name: 'OpenAI',
                infoText: 'Get your API key from <a href="https://platform.openai.com/api-keys" target="_blank">platform.openai.com</a>',
                endpoint: 'https://api.openai.com/v1/chat/completions',
                supportsVision: true
            },
            google: {
                name: 'Google AI',
                infoText: 'Get your API key from <a href="https://aistudio.google.com/app/apikey" target="_blank">aistudio.google.com</a>',
                endpoint: 'https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash-exp:generateContent',
                supportsVision: true
            },
            groq: {
                name: 'Groq',
                infoText: 'Get your API key from <a href="https://console.groq.com/keys" target="_blank">console.groq.com</a>. Note: Groq models currently have limited vision support.',
                endpoint: 'https://api.groq.com/openai/v1/chat/completions',
                supportsVision: true
            },
            custom: {
                name: 'Custom',
                infoText: 'Enter your custom API endpoint and key. Must support OpenAI-compatible format.',
                endpoint: '',
                supportsVision: true
            }
        };

        // Initialize
        selectProvider(currentProvider, false);
        if (apiKey) {
            document.getElementById('apiKeyInput').value = apiKey;
            document.getElementById('apiStatus').textContent = `‚úì ${providerConfig[currentProvider].name} API key saved`;
            document.getElementById('apiStatus').classList.add('success');
        }

        function selectProvider(provider, clearKey = true) {
            currentProvider = provider;
            localStorage.setItem('llm_provider', provider);

            // Update button states
            document.querySelectorAll('.provider-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event?.target?.classList.add('active') || document.querySelector(`.provider-btn:nth-child(${Object.keys(providerConfig).indexOf(provider) + 1})`).classList.add('active');

            // Update info text
            document.getElementById('providerInfo').innerHTML = providerConfig[provider].infoText;

            // Show/hide custom endpoint field
            document.getElementById('customEndpoint').style.display = provider === 'custom' ? 'block' : 'none';
            if (provider === 'custom' && customEndpoint) {
                document.getElementById('customEndpointInput').value = customEndpoint;
            }

            // Load saved key for this provider
            if (clearKey) {
                apiKey = localStorage.getItem(`${provider}_api_key`) || '';
                document.getElementById('apiKeyInput').value = apiKey;
                document.getElementById('apiStatus').textContent = apiKey 
                    ? `‚úì ${providerConfig[provider].name} API key saved`
                    : 'No API key saved';
                document.getElementById('apiStatus').classList.toggle('success', !!apiKey);
            }
        }

        function saveApiKey() {
            const key = document.getElementById('apiKeyInput').value.trim();
            if (key) {
                localStorage.setItem(`${currentProvider}_api_key`, key);
                apiKey = key;
                
                if (currentProvider === 'custom') {
                    customEndpoint = document.getElementById('customEndpointInput').value.trim();
                    localStorage.setItem('custom_endpoint', customEndpoint);
                }

                document.getElementById('apiStatus').textContent = `‚úì ${providerConfig[currentProvider].name} API key saved successfully`;
                document.getElementById('apiStatus').classList.add('success');
            } else {
                document.getElementById('apiStatus').textContent = 'Please enter a valid API key';
                document.getElementById('apiStatus').classList.remove('success');
            }
        }

        // Drag and drop handlers
        const uploadArea = document.getElementById('uploadArea');
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            const file = e.dataTransfer.files[0];
            if (file && file.type.startsWith('image/')) {
                processImage(file);
            }
        });

        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (file) {
                processImage(file);
            }
        }

        function processImage(file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                uploadedImage = e.target.result;
                const preview = document.getElementById('previewImage');
                preview.src = uploadedImage;
                preview.style.display = 'block';
                document.querySelector('.upload-icon').style.display = 'none';
                document.querySelector('.upload-area h3').textContent = 'Image uploaded successfully!';
                document.querySelector('.upload-area p').textContent = 'Click to change';
            };
            reader.readAsDataURL(file);
        }

        async function generateDrafts() {
            // Validation
            if (!apiKey) {
                showError(`Please enter and save your ${providerConfig[currentProvider].name} API key first.`);
                return;
            }

            if (currentProvider === 'custom' && !customEndpoint) {
                showError('Please enter a custom API endpoint.');
                return;
            }

            if (!uploadedImage) {
                showError('Please upload a screenshot first.');
                return;
            }

            const situation = document.getElementById('situation').value.trim();
            const contact = document.getElementById('contact').value.trim();
            const tone = document.getElementById('tone').value.trim();

            if (!situation || !contact) {
                showError('Please fill in Situation and Means of Contact.');
                return;
            }

            // Show loading
            document.getElementById('loadingSection').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'none';
            document.getElementById('errorSection').style.display = 'none';
            document.getElementById('generateBtn').disabled = true;

            try {
                const base64Data = uploadedImage.split(',')[1];
                const mimeType = uploadedImage.split(',')[0].match(/:(.*?);/)[1];

                const prompt = `You are an expert Communication Strategist and Social Dynamics Analyst acting as a Message Drafter.

UPLOADED IMAGE CONTEXT:
- Situation: ${situation}
- Means of Contact: ${contact}
${tone ? `- Desired Tone: ${tone}` : '- Desired Tone: (Please infer from context)'}

Please analyze the image I've provided and generate a response in the following JSON format ONLY (no other text):

{
  "contextSummary": "One sentence summary of the situation",
  "vibeCheck": "The recommended energy/tone (e.g., Professional, Flirty, Firm, Apologetic, Casual, etc.)",
  "drafts": [
    {
      "label": "Safe",
      "text": "The safe, low-risk message that matches the request perfectly",
      "critique": "Brief psychological explanation of why this works"
    },
    {
      "label": "Bold",
      "text": "A slightly more assertive, witty, or direct version",
      "critique": "Brief psychological explanation of why this works"
    },
    {
      "label": "Short",
      "text": "Concise and to-the-point version",
      "critique": "Brief psychological explanation of why this works"
    }
  ]
}

Focus on the most recent message in the screenshot to determine the necessary reply. Return ONLY valid JSON, no markdown formatting or additional text.`;

                let response;
                
                if (currentProvider === 'anthropic') {
                    response = await callAnthropicAPI(prompt, base64Data, mimeType);
                } else if (currentProvider === 'openai') {
                    response = await callOpenAIAPI(prompt, base64Data, mimeType);
                } else if (currentProvider === 'google') {
                    response = await callGoogleAPI(prompt, base64Data, mimeType);
                } else if (currentProvider === 'groq') {
                    response = await callGroqAPI(prompt, base64Data, mimeType);
                } else if (currentProvider === 'custom') {
                    response = await callCustomAPI(prompt, base64Data, mimeType);
                }

                displayResults(response);

            } catch (error) {
                console.error('Error:', error);
                showError(`Error: ${error.message}`);
            } finally {
                document.getElementById('loadingSection').style.display = 'none';
                document.getElementById('generateBtn').disabled = false;
            }
        }

        async function callAnthropicAPI(prompt, base64Data, mimeType) {
            const response = await fetch(providerConfig.anthropic.endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'x-api-key': apiKey,
                    'anthropic-version': '2023-06-01'
                },
                body: JSON.stringify({
                    model: 'claude-sonnet-4-20250514',
                    max_tokens: 2000,
                    messages: [{
                        role: 'user',
                        content: [
                            {
                                type: 'image',
                                source: {
                                    type: 'base64',
                                    media_type: mimeType,
                                    data: base64Data
                                }
                            },
                            {
                                type: 'text',
                                text: prompt
                            }
                        ]
                    }]
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error?.message || 'API request failed');
            }

            const data = await response.json();
            const textContent = data.content.find(c => c.type === 'text')?.text || '';
            return parseJSONResponse(textContent);
        }

        async function callOpenAIAPI(prompt, base64Data, mimeType) {
            const response = await fetch(providerConfig.openai.endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${apiKey}`
                },
                body: JSON.stringify({
                    model: 'gpt-4o',
                    max_tokens: 2000,
                    messages: [{
                        role: 'user',
                        content: [
                            {
                                type: 'image_url',
                                image_url: {
                                    url: `data:${mimeType};base64,${base64Data}`
                                }
                            },
                            {
                                type: 'text',
                                text: prompt
                            }
                        ]
                    }]
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error?.message || 'API request failed');
            }

            const data = await response.json();
            const textContent = data.choices[0]?.message?.content || '';
            return parseJSONResponse(textContent);
        }

        async function callGoogleAPI(prompt, base64Data, mimeType) {
            const response = await fetch(`${providerConfig.google.endpoint}?key=${apiKey}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    contents: [{
                        parts: [
                            {
                                inline_data: {
                                    mime_type: mimeType,
                                    data: base64Data
                                }
                            },
                            {
                                text: prompt
                            }
                        ]
                    }]
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error?.message || 'API request failed');
            }

            const data = await response.json();
            const textContent = data.candidates[0]?.content?.parts[0]?.text || '';
            return parseJSONResponse(textContent);
        }

        async function callGroqAPI(prompt, base64Data, mimeType) {
            const response = await fetch(providerConfig.groq.endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${apiKey}`
                },
                body: JSON.stringify({
                    model: 'llama-3.2-90b-vision-preview',
                    max_tokens: 2000,
                    messages: [{
                        role: 'user',
                        content: [
                            {
                                type: 'image_url',
                                image_url: {
                                    url: `data:${mimeType};base64,${base64Data}`
                                }
                            },
                            {
                                type: 'text',
                                text: prompt
                            }
                        ]
                    }]
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error?.message || 'API request failed');
            }

            const data = await response.json();
            const textContent = data.choices[0]?.message?.content || '';
            return parseJSONResponse(textContent);
        }

        async function callCustomAPI(prompt, base64Data, mimeType) {
            const response = await fetch(customEndpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${apiKey}`
                },
                body: JSON.stringify({
                    model: 'default',
                    max_tokens: 2000,
                    messages: [{
                        role: 'user',
                        content: [
                            {
                                type: 'image_url',
                                image_url: {
                                    url: `data:${mimeType};base64,${base64Data}`
                                }
                            },
                            {
                                type: 'text',
                                text: prompt
                            }
                        ]
                    }]
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error?.message || 'API request failed');
            }

            const data = await response.json();
            const textContent = data.choices?.[0]?.message?.content || data.content?.[0]?.text || '';
            return parseJSONResponse(textContent);
        }

        function parseJSONResponse(text) {
            const jsonMatch = text.match(/\{[\s\S]*\}/);
            if (!jsonMatch) {
                throw new Error('Could not parse response from AI');
            }
            return JSON.parse(jsonMatch[0]);
        }

        function displayResults(data) {
            const resultsSection = document.getElementById('resultsSection');
            
            const html = `
                <div class="context-summary">
                    <h3>üìã Context Summary</h3>
                    <p>${data.contextSummary}</p>
                    <div class="vibe-check">‚ú® Vibe Check: ${data.vibeCheck}</div>
                </div>

                <div class="drafts-container">
                    ${data.drafts.map((draft, index) => `
                        <div class="draft-card">
                            <div class="draft-header">
                                <span class="draft-label ${draft.label.toLowerCase()}">${draft.label === 'Safe' ? 'üõ°Ô∏è' : draft.label === 'Bold' ? 'üî•' : '‚ö°'} ${draft.label} Option</span>
                                <button class="copy-btn" onclick="copyToClipboard(${index}, \`${draft.text.replace(/`/g, '\\`').replace(/\$/g, '\\$')}\`)">
                                    Copy
                                </button>
                            </div>
                            <div class="draft-text">${draft.text}</div>
                            <div class="draft-critique">üí° ${draft.critique}</div>
                        </div>
                    `).join('')}
                </div>
            `;
